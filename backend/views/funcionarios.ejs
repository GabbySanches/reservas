<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    
    <div class="col-xs-12">
      <form action="/insfuncionarios" method="post" role="form">
          <div class="row">
              <div class="col-xs-4">
                  <input type="text" name="cpf" placeholder="cpf" class="form-control" required/>
              </div>
              <div class="col-xs-4">
                  <input type="text" name="nome" placeholder="nome" class="form-control" required/>
              </div>
              <div class="col-xs-4">
                  <input type="text" name="cep" placeholder="cep" class="form-control" required/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="email" placeholder="email" class="form-control" required/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="fone" placeholder="telefone" class="form-control" required/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="funcao" placeholder="funcao" class="form-control" required/>
              </div>
              <div class="col-xs-4">
                  <button type="submit" class="btn btn-default">Incluir</button>
              </div>
          </div>
      </form>
    </div>
    
    <table class="table table-bordered table-striped">
        <thead><tr>
            <th>CPF</th>
            <th>NOME</th>
            <th>CEP</th>
            <th>EMAIL</th>
            <th>FONE</th>
            <th>FUNCAO</th>
        </tr>
        </thead>
      
      <tbody>
          <% funcionarios.forEach(function(funcionario, index) { %>
            <tr>
              <td><a href="/edtfuncionarios/<%= funcionario._id %>">
                <%- funcionario.cpf %>
              </a></td>
              <td><%- funcionario.nome %></td>
              <td><%- funcionario.cep %></td>
              <td><%- funcionario.email %></td>
              <td><%- funcionario.fone %></td>
              <td><%- funcionario.funcao %></td>
              <td><a href="/delfuncionarios/delete/<%= funcionario._id %>" 
                onclick="return confirm('Tem certeza que deseja excluir?');">
                X
              </a></td>                 
            </tr>
          <% }) %>
      </tbody>
      
      
    </table>
    <a href="index">VOLTAR</a>
  </body>
</html>
